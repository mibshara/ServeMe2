<header class="secondary">
<div class="background-image-holder parallax-background overlay">
	<%= image_tag('bg-5.jpg', class: 'background-image',  alt: 'Background') %>
</div>

<div class="container align-vertical hero">
	<div class="row">
		<div class="col-md-5 text-left">
			<h1>Our Products</h1>
			<p>Our fruits are always freshly picked from our gardens or imported from our farms in South America. We take pride in all of our sweets and we bake it with extreme attention to detail, making sure thay everything we sell is healthy and meets standards</p>
		</div>
	</div><!--end of row-->
</div><!--end of container-->
</header>

<section class="product-list">
	<div class="container">
		<% @products.each do |product| %>
       <div class="row">
         <div class="col-md-12">
           <div class="product">
             <div class="row">
               <div class="col-md-6 col-xs-12">
                 <div class="thumbnail">
                   <%= image_tag product.image %>
                 </div>
               </div>
               <div class="col-md-5 col-md-offset-1">
                 <div class="product-details">
                   <h2 class="product-title">
                     <%= product.title %>
                   </h2>
                   <p class="product-price">
                     <%= number_to_currency product.price %></p>
                   <p><%= product.description %></p>
                   <%= button_to product_items_path(product_id: product), class: 'btn btn-default' do %>
                       <i class="fa fa-shopping-cart"></i>
                     Add to cart</a>
                     <% end %>
                 </div>
               </div>
             </div>
           </div>
         </div>
       </div>
       <% end %>
     <!-- /.row -->
   </div>
 </section>
