<section class="newsletter accent-bg">
  <div class="background-image-holder overlay accent">
    <%= image_tag('bg-4.jpg', class: 'background-image',  alt: 'Background') %>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-5 text-left">
        <h2 class="page-title">Search our products</h2>
      </div>
      <div class="col-md-4">
        <form class="newsletter-form">
          <%= form_tag(search_results_path, :method => "get", id: "search-form") do %>
          <%= text_field_tag :search%>
          <%= select_tag "categories" , options_from_collection_for_select(@categories, "id", "name"), include_blank: true %>
          <%=submit_tag "Search", :name => nil, :class => "btn btn-primary" %>
        </form>
    </div>
    <% end %>
    </div><!--end of row-->
  </div><!--end of container-->
</section>

